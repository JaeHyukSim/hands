<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.bangkoklab.data.repository.mapper.AuthCheckMapper">

	<select id="isCheckedByEmail" resultType="int" parameterType="String">
		SELECT COUNT(*) as "count"
		FROM auth_users
		WHERE encrypted_email= #{encrypted_email}
	</select>

	<insert id="insertAuthenticatedUsersByEmail" parameterType="String">
		INSERT INTO auth_users(
											encrypted_email
										) VALUES (
											#{encrypted_email}
										)
	</insert>
</mapper>